<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorProfileFragment">

    <View
        android:id="@+id/viewBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/purple_500"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="40sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/viewBar"
        app:layout_constraintEnd_toEndOf="@+id/viewBar"
        app:layout_constraintTop_toTopOf="@+id/viewBar"
        app:layout_constraintBottom_toBottomOf="@+id/viewBar"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivUser"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/nurse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBar"
        android:layout_marginTop="40dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFullName"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/name"
        android:tint="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@+id/ivUser"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFullNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivFullName"
        app:layout_constraintTop_toTopOf="@+id/ivFullName"
        app:layout_constraintBottom_toBottomOf="@+id/ivFullName"
        android:layout_marginStart="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rxchtvjkjvhbjkn"
        android:textColor="@color/textColor"
        android:textSize="14sp"

        app:layout_constraintStart_toEndOf="@+id/tvFullNameTitle"
        app:layout_constraintTop_toTopOf="@+id/ivFullName"
        app:layout_constraintBottom_toBottomOf="@+id/ivFullName"
        android:layout_marginStart="20dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivEmail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/email"
        android:tint="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@+id/ivFullName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivFullName"
        app:layout_constraintTop_toTopOf="@+id/ivEmail"
        app:layout_constraintBottom_toBottomOf="@+id/ivEmail"
        android:layout_marginStart="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rxchtvjkjvhbjkn"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvFullNameTitle"
        app:layout_constraintTop_toTopOf="@+id/ivEmail"
        app:layout_constraintBottom_toBottomOf="@+id/ivEmail"
        android:layout_marginStart="20dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLocation"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/location"
        android:tint="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@+id/ivEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLocationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivLocation"
        app:layout_constraintTop_toTopOf="@+id/ivLocation"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rxchtvjkjvhbjkn"
        android:textColor="@color/textColor"
        android:textSize="14sp"

        app:layout_constraintStart_toEndOf="@+id/tvFullNameTitle"
        app:layout_constraintTop_toTopOf="@+id/ivLocation"
        app:layout_constraintBottom_toBottomOf="@+id/ivLocation"
        android:layout_marginStart="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>